
@model SurveyApp.WebMvc.Models.UserProfileViewModel
@{
    ViewData["Title"] = "Perfil de Usuario";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
        <div class="bg-white shadow overflow-hidden rounded-lg">
            <div class="px-4 py-5 sm:px-6 bg-primary text-white">
                <h2 class="text-xl font-semibold">Perfil de Usuario</h2>
                <p class="mt-1 text-sm">Información personal y configuración de cuenta</p>
            </div>
            
            <div class="border-t border-gray-200">
                <dl>
                    <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Nombre de usuario</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">@Model.Username</dd>
                    </div>
                    
                    <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Correo electrónico</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">@Model.Email</dd>
                    </div>
                    
                    <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Rol</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            <span class="px-2 py-1 rounded-full text-xs font-medium 
                                @(Model.Role == "Admin" ? "bg-purple-100 text-purple-800" : "bg-blue-100 text-blue-800")">
                                @Model.Role
                            </span>
                        </dd>
                    </div>
                    
                    <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Fecha de registro</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">@DateTime.Now.AddMonths(-1).ToString("dd/MM/yyyy")</dd>
                    </div>
                </dl>
            </div>
            
            <div class="px-4 py-4 sm:px-6 border-t border-gray-200 flex justify-end space-x-3">
                <a href="#" class="btn btn-outline">
                    <i class="fas fa-key mr-2"></i> Cambiar Contraseña
                </a>
                <a href="#" class="btn btn-primary">
                    <i class="fas fa-edit mr-2"></i> Editar Perfil
                </a>
            </div>
        </div>
        
        <div class="mt-8 bg-white shadow overflow-hidden rounded-lg">
            <div class="px-4 py-5 sm:px-6 bg-primary text-white">
                <h2 class="text-xl font-semibold">Actividad Reciente</h2>
                <p class="mt-1 text-sm">Últimas acciones realizadas en el sistema</p>
            </div>
            
            <div class="border-t border-gray-200 divide-y divide-gray-200">
                <div class="px-4 py-4 sm:px-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 bg-primary/10 rounded-full p-2">
                            <i class="fas fa-sign-in-alt text-primary"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm font-medium text-gray-900">Inicio de sesión</p>
                            <p class="text-xs text-gray-500">@DateTime.Now.AddDays(-1).ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>
                </div>
                
                <div class="px-4 py-4 sm:px-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 bg-primary/10 rounded-full p-2">
                            <i class="fas fa-file-alt text-primary"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm font-medium text-gray-900">Creación de encuesta</p>
                            <p class="text-xs text-gray-500">@DateTime.Now.AddDays(-3).ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>
                </div>
                
                <div class="px-4 py-4 sm:px-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 bg-primary/10 rounded-full p-2">
                            <i class="fas fa-chart-bar text-primary"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm font-medium text-gray-900">Visualización de resultados</p>
                            <p class="text-xs text-gray-500">@DateTime.Now.AddDays(-5).ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
