
@model SurveyApp.WebMvc.Models.RegisterViewModel
@{
    ViewData["Title"] = "Registro de Usuario";
}

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-accent/50 to-background">
    <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-xl shadow-lg">
        <div class="text-center">
            <h2 class="text-3xl font-extrabold text-gray-900">
                Crear una cuenta
            </h2>
            <p class="mt-2 text-sm text-muted-foreground">
                Completa el formulario para registrarte en el sistema
            </p>
        </div>
        
        <form class="mt-8 space-y-6" method="post" asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>
            
            <div class="form-group">
                <label asp-for="Username" class="block text-sm font-medium text-gray-700 mb-1">Nombre de usuario</label>
                <div class="relative">
                    <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">
                        <i class="fas fa-user"></i>
                    </span>
                    <input asp-for="Username" type="text" class="form-input pl-10" placeholder="nombre_usuario" autocomplete="username" required />
                </div>
                <span asp-validation-for="Username" class="text-xs text-red-500"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Correo electrónico</label>
                <div class="relative">
                    <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">
                        <i class="fas fa-envelope"></i>
                    </span>
                    <input asp-for="Email" type="email" class="form-input pl-10" placeholder="correo@ejemplo.com" autocomplete="email" required />
                </div>
                <span asp-validation-for="Email" class="text-xs text-red-500"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Contraseña</label>
                <div class="relative">
                    <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">
                        <i class="fas fa-lock"></i>
                    </span>
                    <input asp-for="Password" type="password" class="form-input pl-10" placeholder="Contraseña" autocomplete="new-password" required />
                </div>
                <span asp-validation-for="Password" class="text-xs text-red-500"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirmar contraseña</label>
                <div class="relative">
                    <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">
                        <i class="fas fa-lock"></i>
                    </span>
                    <input asp-for="ConfirmPassword" type="password" class="form-input pl-10" placeholder="Confirmar contraseña" autocomplete="new-password" required />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-xs text-red-500"></span>
            </div>
            
            <div>
                <button type="submit" class="btn btn-primary w-full">
                    <i class="fas fa-user-plus mr-2"></i> Registrarse
                </button>
            </div>
            
            <div class="text-center text-sm">
                <span class="text-gray-600">¿Ya tienes una cuenta?</span>
                <a asp-action="Login" class="text-primary font-medium hover:underline">
                    Inicia sesión aquí
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
