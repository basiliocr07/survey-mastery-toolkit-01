<script>
    function closeAnimatedPartial() {
        const element = document.querySelector('.animate-fade-in');
        element.classList.add('animate-fade-out');
        setTimeout(() => {
            element.remove();
        }, 300);
    }
</script>

<style>
    .animate-fade-in {
        animation: fadeIn 0.3s ease-in-out;
