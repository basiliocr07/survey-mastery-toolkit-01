
@model SurveyApp.WebMvc.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mx-auto px-4 py-8">
    <div class="bg-white shadow-lg rounded-lg p-6 border border-red-200">
        <div class="flex items-center mb-4">
            <div class="bg-red-100 p-3 rounded-full mr-4">
                <svg class="h-8 w-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
            </div>
            <h1 class="text-2xl font-bold text-red-700">Ha ocurrido un error</h1>
        </div>

        <div class="mb-4 p-4 bg-red-50 rounded-md border border-red-200">
            <p class="text-red-800">@(Model.Message ?? "Se ha producido un error al procesar su solicitud.")</p>
        </div>

        @if (Model.ShowRequestId)
        {
            <div class="text-sm text-gray-600 mb-4">
                <p>
                    <strong>Request ID:</strong> <code class="bg-gray-100 px-1 py-0.5 rounded">@Model.RequestId</code>
                </p>
            </div>
        }

        <div class="mt-6">
            <div class="flex items-center mb-2">
                <svg class="h-5 w-5 text-gray-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <h3 class="font-semibold text-gray-700">¿Qué puedo hacer?</h3>
            </div>
            <ul class="list-disc list-inside text-gray-600 space-y-2 ml-6">
                <li>Intente refrescar la página</li>
                <li>Vuelva a la <a asp-controller="Home" asp-action="Index" class="text-primary hover:underline">página principal</a></li>
                <li>Si el problema persiste, póngase en contacto con el administrador del sistema</li>
            </ul>
        </div>

        <div class="mt-6 pt-4 border-t border-gray-200">
            <a asp-controller="Home" asp-action="Index" class="inline-flex items-center px-4 py-2 rounded-md text-sm font-medium text-white bg-primary hover:bg-primary/80 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Volver a la página principal
            </a>
        </div>
    </div>
</div>
