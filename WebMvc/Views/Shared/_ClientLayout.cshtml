
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Encuestas</title>
    <link rel="stylesheet" href="~/css/tailwind-custom.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/utility-fixes.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-gray-50 min-h-screen">
    <div class="min-h-screen flex flex-col bg-background">
        @if (IsSectionDefined("Header"))
        {
            @RenderSection("Header", required: false)
        }
        else
        {
            <header class="bg-primary py-4 px-6 flex justify-between items-center shadow-md">
                <div class="flex items-center">
                    <h1 class="text-white text-xl font-semibold">Client Portal</h1>
                </div>
                
                <div class="hidden md:flex space-x-4">
                    <a href="/" class="text-white hover:text-gray-200 px-3 py-2">Home</a>
                    <a href="/suggestions/create" class="text-white hover:text-gray-200 px-3 py-2">
                        <i class="fas fa-lightbulb mr-2"></i>Sugerencias
                    </a>
                    <a href="/requirements/create" class="text-white hover:text-gray-200 px-3 py-2">
                        <i class="fas fa-file-alt mr-2"></i>Requerimientos
                    </a>
                </div>
                
                <a href="/" class="flex items-center text-white text-sm hover:underline">
                    <i class="fas fa-chevron-left mr-1"></i>
                    Back to main site
                </a>
            </header>
        }
        
        <main class="flex-1 w-full px-4 sm:px-6 lg:px-8 py-12 flex justify-center">
            <div class="w-[900px] max-w-[900px] h-full bg-white p-6 shadow-md rounded-lg">
                @RenderBody()
            </div>
        </main>
        
        @if (IsSectionDefined("Footer"))
        {
            @RenderSection("Footer", required: false)
        }
        else
        {
            <footer class="bg-white border-t py-6">
                <div class="max-w-7xl mx-auto px-6 flex flex-col items-center justify-center">
                    <p class="text-sm text-gray-500">
                        &copy; @DateTime.Now.Year SurveyMaster. All rights reserved.
                    </p>
                </div>
            </footer>
        }
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
