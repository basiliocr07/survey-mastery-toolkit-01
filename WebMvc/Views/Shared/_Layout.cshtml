
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Encuestas</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/tailwind-custom.css" />
    <link rel="stylesheet" href="~/css/utility-fixes.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-gray-50">
    <header>
        <nav class="bg-white shadow-sm">
            <div class="container mx-auto px-6 py-3 flex justify-between items-center">
                <div class="flex items-center space-x-8">
                    <a asp-controller="Home" asp-action="Index" class="text-xl font-bold text-gray-800">
                        <i class="fas fa-clipboard-list text-blue-600 mr-2"></i>SurveyApp
                    </a>
                    <div class="hidden md:flex space-x-6">
                        <a asp-controller="Dashboard" asp-action="Index" class="text-gray-700 hover:text-blue-600 transition-colors">
                            <i class="fas fa-tachometer-alt mr-1"></i> Panel
                        </a>
                        <a asp-controller="Survey" asp-action="Index" class="text-gray-700 hover:text-blue-600 transition-colors">
                            <i class="fas fa-poll mr-1"></i> Encuestas
                        </a>
                        <a asp-controller="Suggestions" asp-action="Index" class="text-gray-700 hover:text-blue-600 transition-colors">
                            <i class="fas fa-lightbulb mr-1"></i> Sugerencias
                        </a>
                        <a asp-controller="Requirements" asp-action="Index" class="text-gray-700 hover:text-blue-600 transition-colors">
                            <i class="fas fa-tasks mr-1"></i> Requerimientos
                        </a>
                        <a asp-controller="Analytics" asp-action="Index" class="text-gray-700 hover:text-blue-600 transition-colors">
                            <i class="fas fa-chart-line mr-1"></i> Análisis
                        </a>
                    </div>
                </div>
                <div class="flex items-center space-x-2">
                    <button class="text-gray-600 hover:text-blue-600 p-2 rounded-full hover:bg-blue-50 transition-colors">
                        <i class="fas fa-bell"></i>
                    </button>
                    <button class="text-gray-600 hover:text-blue-600 p-2 rounded-full hover:bg-blue-50 transition-colors">
                        <i class="fas fa-cog"></i>
                    </button>
                    <div class="border-l pl-2 ml-2">
                        <button class="flex items-center space-x-2 bg-gray-100 hover:bg-gray-200 rounded-full py-1 pl-1 pr-3 transition-colors">
                            <div class="w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center">
                                <i class="fas fa-user"></i>
                            </div>
                            <span class="text-sm font-medium">Admin</span>
                        </button>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="bg-white border-t mt-auto">
        <div class="container mx-auto px-6 py-4">
            <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
                <div class="text-sm text-gray-600">
                    &copy; 2023 SurveyApp - Todos los derechos reservados
                </div>
                <div class="flex space-x-6">
                    <a href="#" class="text-gray-600 hover:text-blue-600">Políticas de Privacidad</a>
                    <a href="#" class="text-gray-600 hover:text-blue-600">Términos de Servicio</a>
                    <a href="#" class="text-gray-600 hover:text-blue-600">Contacto</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
