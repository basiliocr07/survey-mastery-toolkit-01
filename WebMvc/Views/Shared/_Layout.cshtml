
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Encuestas</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/tailwind-custom.css" />
    <link rel="stylesheet" href="~/css/utility-fixes.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-gray-50">
    <header>
        <nav class="bg-white shadow-sm">
            <div class="container mx-auto px-6 py-3 flex justify-between items-center">
                <div class="flex items-center space-x-8">
                    <a asp-controller="Home" asp-action="Index" class="text-xl font-bold text-gray-800">
                        <i class="fas fa-clipboard-list text-blue-600 mr-2"></i>SurveyApp
                    </a>
                    <div class="hidden md:flex space-x-6">
                        <a asp-controller="Home" asp-action="Index" class="text-gray-700 hover:text-blue-600 transition-colors">
                            <i class="fas fa-home mr-1"></i> Inicio
                        </a>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-controller="Dashboard" asp-action="Index" class="text-gray-700 hover:text-blue-600 transition-colors">
                                    <i class="fas fa-tachometer-alt mr-1"></i> Panel
                                </a>
                                <a asp-controller="Survey" asp-action="Index" class="text-gray-700 hover:text-blue-600 transition-colors">
                                    <i class="fas fa-poll mr-1"></i> Encuestas
                                </a>
                                <a asp-controller="Analytics" asp-action="Index" class="text-gray-700 hover:text-blue-600 transition-colors">
                                    <i class="fas fa-chart-line mr-1"></i> Análisis
                                </a>
                                <a asp-controller="Customers" asp-action="Index" class="text-gray-700 hover:text-blue-600 transition-colors">
                                    <i class="fas fa-users mr-1"></i> Clientes
                                </a>
                            }
                            <a asp-controller="Suggestions" asp-action="Index" class="text-gray-700 hover:text-blue-600 transition-colors">
                                <i class="fas fa-lightbulb mr-1"></i> Sugerencias
                            </a>
                            <a asp-controller="Requirements" asp-action="Index" class="text-gray-700 hover:text-blue-600 transition-colors">
                                <i class="fas fa-tasks mr-1"></i> Requerimientos
                            </a>
                        }
                    </div>
                </div>
                <div class="flex items-center space-x-2">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="flex items-center space-x-2">
                            <span class="text-gray-700">Hola, @User.Identity.Name</span>
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="text-gray-600 hover:text-blue-600 p-2 rounded-full hover:bg-blue-50 transition-colors">
                                    <i class="fas fa-sign-out-alt"></i>
                                </button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="text-gray-600 hover:text-blue-600 p-2 rounded-full hover:bg-blue-50 transition-colors">
                            <i class="fas fa-sign-in-alt mr-1"></i> Iniciar Sesión
                        </a>
                        <a asp-controller="Account" asp-action="Register" class="text-gray-600 hover:text-blue-600 p-2 rounded-full hover:bg-blue-50 transition-colors">
                            <i class="fas fa-user-plus mr-1"></i> Registrarse
                        </a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="bg-white border-t mt-auto">
        <div class="container mx-auto px-6 py-4">
            <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
                <div class="text-sm text-gray-600">
                    &copy; 2023 SurveyApp - Todos los derechos reservados
                </div>
                <div class="flex space-x-6">
                    <a href="#" class="text-gray-600 hover:text-blue-600">Políticas de Privacidad</a>
                    <a href="#" class="text-gray-600 hover:text-blue-600">Términos de Servicio</a>
                    <a href="#" class="text-gray-600 hover:text-blue-600">Contacto</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
