
@if (TempData["SuccessMessage"] != null)
{
    <div id="notification" class="fixed top-4 right-4 z-50 bg-green-100 border-l-4 border-green-500 text-green-700 p-4 rounded shadow-md max-w-md transition-opacity duration-300 ease-in-out opacity-100">
        <div class="flex">
            <div class="flex-shrink-0">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="ml-3">
                <p class="font-medium">@TempData["SuccessMessage"]</p>
            </div>
            <div class="ml-auto pl-3">
                <div class="-mx-1.5 -my-1.5">
                    <button onclick="closeNotification()" class="inline-flex text-green-700 hover:text-green-900">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        // Auto-hide notification after 5 seconds
        setTimeout(function() {
            var notification = document.getElementById('notification');
            if (notification) {
                notification.classList.replace('opacity-100', 'opacity-0');
                setTimeout(function() {
                    notification.remove();
                }, 300);
            }
        }, 5000);
        
        function closeNotification() {
            var notification = document.getElementById('notification');
            if (notification) {
                notification.classList.replace('opacity-100', 'opacity-0');
                setTimeout(function() {
                    notification.remove();
                }, 300);
            }
        }
    </script>
}

