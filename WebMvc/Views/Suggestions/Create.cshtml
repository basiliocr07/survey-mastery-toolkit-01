
@model SurveyApp.WebMvc.Models.CreateSuggestionViewModel
@{
    ViewData["Title"] = ViewData["PageTitle"] ?? "Nueva Sugerencia";
    Layout = "_Layout";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-3xl mx-auto">
        <h1 class="text-2xl font-bold mb-6">@ViewData["Title"]</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                @TempData["SuccessMessage"]
            </div>
        }

        <div class="bg-white shadow-md rounded-lg p-6">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

                <div class="mb-4">
                    <label asp-for="Content" class="block text-gray-700 font-medium mb-2">Contenido</label>
                    <textarea asp-for="Content" rows="5" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                    <span asp-validation-for="Content" class="text-red-500 text-sm"></span>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                    <div>
                        <label asp-for="CustomerName" class="block text-gray-700 font-medium mb-2">Nombre</label>
                        <input asp-for="CustomerName" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                        <span asp-validation-for="CustomerName" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="CustomerEmail" class="block text-gray-700 font-medium mb-2">Email</label>
                        <input asp-for="CustomerEmail" type="email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                        <span asp-validation-for="CustomerEmail" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="Category" class="block text-gray-700 font-medium mb-2">Categoría</label>
                    <select asp-for="Category" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="UI/UX">UI/UX</option>
                        <option value="Funcionalidades">Funcionalidades</option>
                        <option value="Rendimiento">Rendimiento</option>
                        <option value="Integraciones">Integraciones</option>
                        <option value="Reportes">Reportes</option>
                        <option value="Aplicación Móvil">Aplicación Móvil</option>
                        <option value="Otro">Otro</option>
                    </select>
                </div>

                <div class="flex items-center mb-4">
                    <input asp-for="IsAnonymous" type="checkbox" class="mr-2 h-4 w-4 text-blue-600 focus:ring-blue-500" />
                    <label asp-for="IsAnonymous" class="text-gray-700">Enviar anónimamente</label>
                </div>

                <div class="mt-6">
                    <button type="submit" class="bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                        Enviar Sugerencia
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
