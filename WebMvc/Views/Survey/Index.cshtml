
@model List<SurveyViewModel>
@{
    ViewData["Title"] = "Survey Management";
}

<div class="container mx-auto px-4 py-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-900">Survey Management</h1>
        <a asp-action="Create" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors">
            Create New Survey
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            <span class="font-bold">Success!</span> @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            <span class="font-bold">Error!</span> @TempData["ErrorMessage"]
        </div>
    }

    @if (TempData["WarningMessage"] != null)
    {
        <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded mb-4">
            <span class="font-bold">Warning!</span> @TempData["WarningMessage"]
        </div>
    }

    @if (!Model.Any())
    {
        <div class="bg-gray-100 p-6 rounded text-center">
            <p class="text-gray-700">No surveys found. Click "Create New Survey" to get started.</p>
        </div>
    }
    else
    {
        <div class="bg-white shadow rounded-lg overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Title
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Description
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Created
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Responses
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Completion Rate
                        </th>
                        <th scope="col" class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider text-center">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var survey in Model)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">@survey.Title</div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-sm text-gray-500 truncate max-w-xs">@survey.Description</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-500">@survey.CreatedAt.ToString("MMM dd, yyyy")</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                <div class="text-sm text-gray-900">@survey.Responses</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                <div class="text-sm text-gray-900">@survey.CompletionRate%</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                                <div class="flex space-x-2 justify-center">
                                    <a asp-action="Details" asp-route-id="@survey.Id" class="text-blue-600 hover:text-blue-900">
                                        Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@survey.Id" class="text-indigo-600 hover:text-indigo-900">
                                        Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@survey.Id" class="text-red-600 hover:text-red-900">
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-6 p-4 bg-gray-50 rounded-lg">
        <h2 class="text-lg font-medium mb-4">Send Survey on Ticket Closed</h2>
        <form asp-action="SendOnTicketClosed" method="post" class="flex flex-wrap items-end gap-4">
            <div class="w-full md:w-auto">
                <label for="customerEmail" class="block text-sm font-medium text-gray-700 mb-1">Customer Email:</label>
                <input type="email" id="customerEmail" name="customerEmail" required 
                       class="w-full md:w-64 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
            </div>
            <div class="w-full md:w-auto">
                <label for="surveyId" class="block text-sm font-medium text-gray-700 mb-1">Survey (optional):</label>
                <select id="surveyId" name="surveyId" 
                        class="w-full md:w-64 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                    <option value="">Auto-select best survey</option>
                    @foreach (var survey in Model)
                    {
                        <option value="@survey.Id">@survey.Title</option>
                    }
                </select>
            </div>
            <div class="w-full md:w-auto">
                <button type="submit" class="px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition-colors">
                    Send Survey
                </button>
            </div>
        </form>
    </div>
</div>
