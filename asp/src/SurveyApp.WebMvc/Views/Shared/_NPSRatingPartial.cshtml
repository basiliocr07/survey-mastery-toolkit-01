
@model (string name, string value, bool required)

<div class="space-y-4">
    <div class="grid grid-cols-11 gap-1 w-full">
        @for (int rating = 0; rating <= 10; rating++)
        {
            var isSelected = Model.value == rating.ToString();
            <div class="text-center">
                <input
                    type="radio"
                    name="@Model.name"
                    id="@Model.name-nps@rating"
                    value="@rating.ToString()"
                    class="sr-only"
                    checked="@isSelected"
                    @(Model.required && rating == 0 ? "required" : "")
                />
                <label
                    for="@Model.name-nps@rating"
                    class="flex items-center justify-center h-10 rounded-md cursor-pointer border transition-all @(isSelected ? "bg-primary text-primary-foreground border-primary" : "bg-background hover:bg-accent border-input")"
                >
                    @rating
                </label>
            </div>
        }
    </div>
    
    <div class="flex justify-between text-sm text-muted-foreground px-1">
        <div>No es probable</div>
        <div>Neutral</div>
        <div>Muy probable</div>
    </div>
</div>
