
@model SurveyApp.WebMvc.Controllers.SuggestionsViewModel
@{
    ViewData["Title"] = "Customer Suggestions";
    var isAdmin = (bool)ViewData["IsAdmin"];
}

<div class="min-h-screen flex flex-col bg-background">
    <main class="flex-1 w-full px-4 sm:px-6 lg:px-8 pt-24 pb-20 flex justify-center">
        <div class="w-full max-w-[1000px]">
            <div class="mb-8">
                <h1 class="text-3xl font-bold tracking-tight sm:text-4xl mb-2">Customer Suggestions</h1>
                <p class="text-muted-foreground max-w-2xl">
                    @(isAdmin
                        ? "Manage and respond to customer suggestions and feedback."
                        : "We value your feedback! Submit your ideas and check out what others have suggested.")
                </p>
            </div>
            
            @await Html.PartialAsync("_SuggestionsDashboard", Model)
        </div>
    </main>
</div>
