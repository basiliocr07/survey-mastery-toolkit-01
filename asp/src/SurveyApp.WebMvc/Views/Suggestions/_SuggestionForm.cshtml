
@model SurveyApp.WebMvc.Models.CreateSuggestionViewModel
@{
    if (Model == null)
    {
        Model = new SurveyApp.WebMvc.Models.CreateSuggestionViewModel();
    }
}

<form asp-action="Create" asp-controller="Suggestions" method="post" class="space-y-6">
    <div class="form-group">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-input" placeholder="Brief title for your suggestion" />
        <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
    </div>

    <div class="form-group">
        <label asp-for="Content" class="form-label">Suggestion</label>
        <textarea asp-for="Content" class="form-textarea min-h-[100px]" placeholder="Describe your suggestion in detail..."></textarea>
        <span asp-validation-for="Content" class="text-red-500 text-sm"></span>
    </div>

    <div class="form-group">
        <label asp-for="CustomerName" class="form-label">Your Name</label>
        <input asp-for="CustomerName" class="form-input" placeholder="Enter your name" />
        <span asp-validation-for="CustomerName" class="text-red-500 text-sm"></span>
    </div>

    <div class="form-group">
        <label asp-for="CustomerEmail" class="form-label">Email</label>
        <input asp-for="CustomerEmail" class="form-input" placeholder="Enter your email" type="email" />
        <span asp-validation-for="CustomerEmail" class="text-red-500 text-sm"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category" class="form-label">Category (Optional)</label>
        <input asp-for="Category" class="form-input" placeholder="e.g., UI/UX, Feature Request, Bug Report" />
        <span asp-validation-for="Category" class="text-red-500 text-sm"></span>
    </div>

    <div class="form-group flex flex-row items-start space-x-3 space-y-0">
        <div class="form-checkbox-container mt-1">
            <input asp-for="IsAnonymous" type="checkbox" class="form-checkbox" />
        </div>
        <div class="space-y-1 leading-none">
            <label asp-for="IsAnonymous" class="form-label">Submit Anonymously</label>
            <p class="text-sm text-muted-foreground">
                Your name won't be displayed with your suggestion
            </p>
        </div>
    </div>

    <button type="submit" class="btn btn-primary w-full">
        Submit Suggestion
    </button>
</form>
